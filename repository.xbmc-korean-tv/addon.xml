<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.xbmc-korean-tv"
	name="XBMC Korean TV Addons"
	version="0.0.1"
	provider-name="xbmc-korean-tv">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
	<extension point="xbmc.addon.repository"
		name="XBMC-Korean TV Addons Repository">
		<dir minversion="12.9.0">
			<info compressed="true">https://raw.githubusercontent.com/xbmc-korean-tv/addons/master/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/xbmc-korean-tv/addons/master/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/xbmc-korean-tv/addons/master</datadir>
			<hashes>true</hashes>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Install Add-ons from XBMC-Korean TV</summary>
		<summary lang="ko">XBMC-Korean TV에서 애드온 설치</summary>
		<description lang="en">Download and install add-ons from the XBMC-Korean TV addon repository.</description>
		<description lang="ko">XBMC-Korean TV 애드온 저장소로부터 애드온들을 다운로드하고 설치합니다.</description>
		<platform>all</platform>
	</extension>
</addon>

